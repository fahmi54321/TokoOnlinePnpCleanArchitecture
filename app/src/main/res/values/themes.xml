<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TokoOnlinePnpCleanArchitecture" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="colorControlNormal">@color/ungu1</item>
        <item name="colorControlActivated">@color/ungu1</item>
        <item name="colorControlHighlight">@color/ungu1</item>
    </style>

    <style name="custom_dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="TextView"></style>
    <style name="Button"></style>
    <style name="EditText"></style>

    <style name="TextView.aclonicaUngu_24sp">
        <item name="fontFamily">@font/aclonica_regular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/ungu1</item>
    </style>

    <style name="TextView.poppinsRegulerUngu_14sp">
        <item name="fontFamily">@font/poppins_reguler</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/ungu1</item>
    </style>

    <style name="TextView.poppinsRegulerUngu_12sp">
        <item name="fontFamily">@font/poppins_reguler</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/ungu1</item>
    </style>

    <style name="TextView.poppinsRegulerUngu_10sp">
        <item name="fontFamily">@font/poppins_reguler</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/ungu1</item>
    </style>

    <style name="TextView.poppinsBoldBlack_12sp">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.poppinsRegulerWhite_18sp">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.satu">
        <item name="android:background">@drawable/bg_ungu_20dp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.dua">
        <item name="android:background">@color/green</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="EditText.satu">
        <item name="fontFamily">@font/poppins_reguler</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/ungu1</item>
        <item name="android:textColorHint">@color/grey1</item>
    </style>

</resources>